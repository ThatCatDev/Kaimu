---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Runtime config - read from process.env at request time (SSR)
const runtimeConfig = {
  apiUrl: process.env.PUBLIC_API_URL || import.meta.env.PUBLIC_API_URL || '',
  useProxy: process.env.PUBLIC_USE_PROXY || import.meta.env.PUBLIC_USE_PROXY || '',
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <script is:inline define:vars={{ runtimeConfig }}>
      window.__RUNTIME_CONFIG__ = runtimeConfig;
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <slot />
  </body>
</html>
