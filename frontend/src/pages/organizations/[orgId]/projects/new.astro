---
import Layout from '../../../../layouts/Layout.astro';
import Nav from '../../../../components/Nav.svelte';
import CreateProjectForm from '../../../../components/CreateProjectForm.svelte';

export const prerender = false;

const { orgId } = Astro.params;
---

<Layout title="Create Project - Pulse">
  <Nav client:load />

  <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <nav class="text-sm text-gray-500 mb-2">
        <a href="/dashboard" class="hover:text-gray-700">Dashboard</a>
        <span class="mx-2">/</span>
        <a href={`/organizations/${orgId}`} class="hover:text-gray-700">Organization</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">New Project</span>
      </nav>
      <h1 class="text-2xl font-bold text-gray-900">Create Project</h1>
      <p class="mt-1 text-sm text-gray-500">
        Projects are where you manage your work and track issues.
      </p>
    </div>

    <CreateProjectForm client:load organizationId={orgId!} />
  </main>
</Layout>
