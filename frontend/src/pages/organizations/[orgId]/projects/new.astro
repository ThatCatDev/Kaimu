---
import Layout from '../../../../layouts/Layout.astro';
import AppShell from '../../../../components/AppShell.svelte';
import CreateProjectForm from '../../../../components/CreateProjectForm.svelte';

export const prerender = false;

const { orgId } = Astro.params;
---

<Layout title="Create Project - Kaimu">
  <AppShell client:load currentPath={`/organizations/${orgId}/projects/new`}>
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Create Project</h1>
        <p class="mt-1 text-sm text-gray-500">
          Projects are where you manage your work and track issues.
        </p>
      </div>

      <CreateProjectForm client:load organizationId={orgId!} />
    </div>
  </AppShell>
</Layout>
