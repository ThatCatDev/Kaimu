---
import Layout from '../../layouts/Layout.astro';
import AppShell from '../../components/AppShell.svelte';
import CreateOrganizationForm from '../../components/CreateOrganizationForm.svelte';
---

<Layout title="Create Organization - Pulse">
  <AppShell client:load currentPath="/organizations/new">
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Create Organization</h1>
        <p class="mt-1 text-sm text-gray-500">
          Organizations are the top-level container for your projects.
        </p>
      </div>

      <CreateOrganizationForm client:load />
    </div>
  </AppShell>
</Layout>
